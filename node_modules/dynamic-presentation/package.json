{
  "name": "dynamic-presentation",
  "version": "3.1.2",
  "description": "Javascript for Dynamic Presentation",
  "main": "js/LoadRevealMusicXMLPlugin.js",
  "scripts": {
    "compile": "npm run compile:scss",
    "compile:scss": "npx node-sass sass -o css --include-path node_modules",
    "run": "npm run compile && npx http-server",
    "setupAndServe": "npm install -g npm && npm install && npm run run",
    "style:check": "npm run checkprettier && npm run checksemistandard",
    "style:fix": "npm run fixprettier && npm run fixsemistandard",
    "checkprettier": "npx prettierx --check **/*.{html,js,json,md,scss,yml}",
    "fixprettier": "npx prettierx --write **/*.{html,js,json,md,scss,yml}",
    "checksemistandard": "npx semistandard js/*.js",
    "fixsemistandard": "npx semistandard js/*.js --fix",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.ccel.org:hymnary/dynamic-presentation.git"
  },
  "author": "Zach DeCook <zdecook@ccel.org>",
  "license": "ISC",
  "devDependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "http-server": "^0.11.1",
    "jest": "^24.9.0",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "node-sass": "^9.0.0",
    "prettierx": "^0.19.0",
    "reveal.js": "git+https://github.com/christian-classics-ethereal-library/reveal.js.git#ccel-2023-01-11",
    "semistandard": "^13.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "js/*.js"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "jest-environment-jsdom-fourteen"
  },
  "peerDependencies": {
    "reveal.js": "git+https://github.com/christian-classics-ethereal-library/reveal.js.git#ccel-2023-01-11"
  }
}
